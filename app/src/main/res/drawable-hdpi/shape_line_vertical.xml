<?xml version="1.0" encoding="utf-8"?>
<!--绘制竖着的线,旋转,必须设置size,不然divider显示不正常-->
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromDegrees="90"
        android:toDegrees="90">
    <shape
        android:shape="line">
        <stroke
            android:width="1dp"
            android:color="@color/whitesmoke"
            />
        <size
            android:width="40dp"
            />

    </shape>
</rotate>