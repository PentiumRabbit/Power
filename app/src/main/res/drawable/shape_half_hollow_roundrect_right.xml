<?xml version="1.0" encoding="utf-8"?>
<!--没直接用shaper是因为3.0以下会显示不正常-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">

            <stroke
                android:color="@color/Yellow"
                android:width="2dp"

                />
            <size
                android:width="60dp"
                android:height="60dp"
                />

            <corners
                android:radius="60dp"
                />

        </shape>
    </item>

    <item
        android:right="30dp"
        >
        <shape
            android:shape="rectangle">
            <stroke
                android:color="@color/Yellow"
                android:width="2dp"
                />
        </shape>
    </item>


    <item
        android:right="30dp"
        android:top="2dp"
        android:bottom="2dp"

        >
        <shape
            android:shape="rectangle">
            <solid
                android:color="@android:color/white"
                />

        </shape>
    </item>

    <item
        android:left="2dp"
        android:top="2dp"
        android:bottom="2dp"
        android:right="2dp"
        >
        <shape
            android:shape="rectangle">

            <solid android:color="@android:color/white"/>
            <size
                android:height="56dp"
                android:width="56dp"
                />
            <corners
                android:radius="28dp"
                />


        </shape>
    </item>


</layer-list>